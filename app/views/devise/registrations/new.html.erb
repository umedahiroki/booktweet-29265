<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h3 class='form-header-text'>
      新規登録情報
    </h3>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="new-form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nicknmame, class:"input-default", id:"nickname", placeholder:"例) book太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="new-form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='new-form-text-wrap'>
      <label class="new-form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='new-form-text-wrap'>
      <label class="new-form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="new-form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 山田" %>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 陸太郎" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="new-form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) リクタロウ" %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "新規登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>